<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>distribution</id>
	<formats>
		<format>dir</format>
	</formats>
	<moduleSets>
		<moduleSet>
			<includes>
				<include>org.webswing:webswing-server</include>
			</includes>
			<binaries>
				<includeDependencies>true</includeDependencies>
				<dependencySets>
					<dependencySet>
						<outputDirectory>server-lib</outputDirectory>
					</dependencySet>
				</dependencySets>
				<unpack>false</unpack>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>org.webswing:webswing-container</include>
			</includes>
			<binaries>
				<includeDependencies>false</includeDependencies>
				<unpack>false</unpack>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
			</binaries>
		</moduleSet>
		<moduleSet>
			<includes>
				<include>org.webswing:webswing-container-lib</include>
			</includes>
			<binaries>
				<includeDependencies>true</includeDependencies>
				<outputDirectory>lib</outputDirectory>
				<unpack>false</unpack>
				<outputFileNameMapping>${module.artifactId}.${module.extension}</outputFileNameMapping>
			</binaries>
		</moduleSet>

	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>${basedir}/src/main/demo</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*</include>
				<include>swinglib/*</include>
			</includes>
		</fileSet>
	</fileSets>
	<files>
		<file>
			<source>LICENSE.txt</source>
			<outputDirectory>/</outputDirectory>
		</file>
	</files>
</assembly>